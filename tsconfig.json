{
  "compilerOptions": {
    "outDir": "./build",
    "incremental": true,
    "module": "commonjs",
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "build/**/*",
    "babel.config.js",
    "jest.config.js",
    "wepback.config.js"
  ]
}
